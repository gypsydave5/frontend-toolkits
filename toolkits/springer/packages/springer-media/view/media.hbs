<li class="c-media {{#if modifier}}{{modifier}}{{/if}}">
	{{#with image}}
		{{#with left}}
			{{#if play}}
				<div class="c-media__figure">
					<img src="{{src}}" alt="{{alt}}">
					<div class="c-media__play">
						<span class="u-visually-hidden">Video</span>
					</div>
				</div>
			{{else}}
				<img src="{{src}}" class="c-media__figure" alt="{{alt}}">
			{{/if}}
		{{/with}}
	{{/with}}
	<div class="c-media__body">
		<h{{level}} class="c-media__title">
			<a href="{{mediaUrl}}">{{title}}</a>
		</h{{level}}>
		{{#if text}}
		<p>{{text}}</p>
		{{/if}}
	</div>
	{{#with image}}
		{{#with right}}
			{{#if play}}
				<div class="c-media__figure">
					<img src="{{src}}" alt="{{alt}}">
					<div class="c-media__play">
						<span class="u-visually-hidden">Video</span>
					</div>
				</div>
			{{else}}
				<img src="{{src}}" class="c-media__figure" alt="{{alt}}">
			{{/if}}
		{{/with}}
	{{/with}}
</li>
