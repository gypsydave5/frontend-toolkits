<div class="c-hero"{{#if color}} style="background-color: {{color}}"{{/if}}>
	{{#if imageLeft}}
		{{#if imageSrc}}
			<div class="c-hero__image"{{#if imageMin}} style="--hero--image-min: {{imageMin}}"{{/if}}>
				<img src="{{imageSrc}}" alt=""/>
			</div>
		{{/if}}
		<div class="c-hero__content" style="{{#if contentBasis}}--hero--content-basis: {{contentBasis}};{{/if}}{{#if paddingInline}}--hero--content-padding-inline:{{paddingInline}};{{/if}}{{#if paddingBlock}}--hero--content-padding-block:{{paddingBlock}};{{/if}}">
			<h1>{{title}}</h1>
			{{#if content}}
				{{{content}}}
			{{/if}}
		</div>
	{{else}}
		<div class="c-hero__content" style="{{#if contentBasis}}--hero--content-basis: {{contentBasis}};{{/if}}{{#if paddingInline}}--hero--content-padding-inline:{{paddingInline}};{{/if}}{{#if paddingBlock}}--hero--content-padding-block:{{paddingBlock}};{{/if}}">
			<h1>{{title}}</h1>
			{{#if content}}
				{{{content}}}
			{{/if}}
		</div>
		{{#if imageSrc}}
			<div class="c-hero__image"{{#if imageMin}} style="--hero--image-min: {{imageMin}}"{{/if}}>
				<img src="{{imageSrc}}" alt=""/>
			</div>
		{{/if}}
	{{/if}}
</div>
