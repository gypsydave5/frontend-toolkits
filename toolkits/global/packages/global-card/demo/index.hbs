<style>
	.demo-grid {
		list-style: none;
		padding: 0;
	}

	.demo-grid > * + * {
		margin-top: 1em;
		margin-top: var(--grid--gap, 1em);
	}


	@supports (display: grid) {
		.demo-grid > * {
			margin: 0;
		}

		.demo-grid {
			display: grid;
			gap: 1em;
			gap: var(--grid--gap, 1em);
			grid-template-columns: repeat(auto-fit, minmax(var(--grid--basis, 230px), 1fr));
		}
	}
</style>

<h2>With borders</h2>

<ul class="demo-grid">
{{#each cards}}
	{{>card}}
{{/each}}
</ul>

<h2>Without borders</h2>

<ul class="demo-grid">
{{#each cards}}
	{{>card border=false}}
{{/each}}
</ul>
