<style>
	.demo-grid {
		list-style: none;
		padding: 0;
	}

	.demo-grid > * + * {
		margin-top: 1em;
		margin-top: var(--grid--gap, 1em);
	}


	@supports (display: grid) {
		.demo-grid > * {
			margin: 0;
		}

		.demo-grid {
			display: grid;
			gap: 1em;
			gap: var(--grid--gap, 1em);
			grid-template-columns: repeat(auto-fit, minmax(var(--grid--basis, 230px), 1fr));
		}
	}
</style>

<h2>Default (with border and content padding)</h2>

<ul class="demo-grid">
{{#with cardsDefault}}
	{{#each cards}}
		{{>card parent=..}}
	{{/each}}
{{/with}}
</ul>

<h2>Portraits (border and content padding removed)</h2>

<ul class="demo-grid">
{{#with cardsPortrait}}
	{{#each cards}}
		{{>card parent =..}}
	{{/each}}
{{/with}}
</ul>
