<div class="c-card">
	{{#with image}}
		<div class="c-card__image">
			<img src="{{src}}" alt="{{alt}}">
		</div>
	{{/with}}
    <div class="c-card__body">
		{{#with title}}
        <h3 class="c-card__title" aria-level="{{level}}">
            <a class="c-card__link" href="#">{{label}}</a>
        </h3>
		{{/with}}
		{{#if summary}}
        	<div class="c-card__summary">{{summary}}</div>
		{{/if}}
    </div>
</div>
